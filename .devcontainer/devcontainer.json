{
	"name": "react-template",
	"dockerComposeFile": "../docker/dev/docker-compose.yml",
	"workspaceFolder": "/app",
	"service": "app",
	"updateRemoteUserUID": true,
	"remoteUser": "node",
	"onCreateCommand": "bun i",
	"features": {
		"ghcr.io/devcontainers/features/git": "latest",
		"ghcr.io/devcontainers/features/docker-in-docker": {
			"version": "latest",
			"username": "node"
		},
		"ghcr.io/dhoeric/features/trivy": "latest",
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"configureZshAsDefaultShell": true,
			"username": "node"
		},
		"ghcr.io/devcontainers-extra/features/zsh-plugins": {
			"plugins": "git docker bun",
			"username": "node"
		},
		"ghcr.io/devcontainers-extra/features/ffmpeg-apt-get:1": true
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"biomejs.biome",
				"shd101wyy.markdown-preview-enhanced",
				"csstools.postcss",
				"hangxingliu.vscode-nginx-conf-hint",
				"aaron-bond.better-comments",
				"vitest.explorer",
				"bradlc.vscode-tailwindcss",
				"github.vscode-github-actions",
				"ms-azuretools.vscode-containers",
				"ms-vscode-remote.remote-containers"
			]
		}
	}
}
